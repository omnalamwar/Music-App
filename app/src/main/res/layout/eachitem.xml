<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/musicImage1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/bg_cornerSoft"
        android:elevation="8dp"/>

    <TextView
        android:id="@+id/musicTitle1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/grotesk"
        android:text="This is the Title for the music"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/musicImage1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/musicDesc1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="This is Description for the music"
        android:fontFamily="@font/grotesk"
        android:textSize="12dp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/musicImage1"
        app:layout_constraintTop_toBottomOf="@+id/musicTitle1" />

    <TextView
        android:id="@+id/musicTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/grotesk"
        android:text="2:30"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>